@model Project.Models.ApplicantDto

@{
    ViewData["Title"] = "Upsert";
}
<div class="row card">
    <div class="card-body">
        <h1 class="mt-3">@(Model.Id != 0 ? "Update" : "Create")</h1>
        <h4>Applicant</h4>
        <hr />

        <div class="col-md-4">
            @if (TempData["AlertMessageApplicant"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @TempData["AlertMessageApplicant"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form class="needs-validation" novalidate asp-action="Upsert" enctype="multipart/form-data">
                <input asp-for="Id" hidden />
                <input asp-for="Image" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if(Model.Id != 0){
                    <input asp-for="Email" class="form-control" hidden />
                }
                else
                {
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <div class="invalid-feedback">Please enter email.</div>
                    </div>
                }
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" required />
                    <div class="invalid-feedback">Please enter password.</div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Fullname" class="control-label"></label>
                    <input asp-for="Fullname" class="form-control" required />
                    <div class="invalid-feedback">Please enter fullname.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" required />
                    <div class="invalid-feedback">Please enter phone.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Birthday" class="control-label"></label>
                    <input asp-for="Birthday" class="form-control" required />
                    <div class="invalid-feedback">Please enter birthday.</div>
                    <span class="text-danger" asp-validation-for="Birthday"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Ward" class="control-label"></label>
                    <input asp-for="Ward" class="form-control" required />
                    <div class="invalid-feedback">Please enter ward.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="District" class="control-label"></label>
                    <input asp-for="District" class="form-control" required />
                    <div class="invalid-feedback">Please enter district.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Province" class="control-label"></label>
                    <input asp-for="Province" class="form-control" required />
                    <div class="invalid-feedback">Please enter province.</div>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Image</label>
                    <input type="file" name="file" class="form-control" />
                    <div class="invalid-feedback">Please choose image.</div>
                </div>
                <div class="form-group mt-2">
                    @if (Model.Id != 0)
                    {
                        <input type="submit" value="Update" class="btn btn-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Create" class="btn btn-primary" />
                    }
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
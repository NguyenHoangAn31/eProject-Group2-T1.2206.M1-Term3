@using Project.Models;
@model IEnumerable<AppUser>;
@section HeaderContent {
    <link href="~/assets/admin/css/table.css" rel="stylesheet">
}
<div class="pagetitle">
    <h1>Users Tables</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">Users</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Users</h5>
                <button type="button" class="btn btn-success rounded-pill">
                    <a asp-controller="AppUser" asp-action="Create" class="text-white">Add New</a>
                </button>
                <!-- Table with stripped rows -->
                <table class="table datatable table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Email</th>
                            <th><b>N</b>ame</th>
                            <th>Department</th>
                            <th>BirthDay</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    <img src="~/@item.Image" />
                                </td>
                                <td>@Html.DisplayFor(j=>item.Email)</td>
                                <td>@Html.DisplayFor(j=>item.Fullname)</td>
                                <td>@Html.DisplayFor(j=>item.Department!.Name)</td>
                                <td>@Html.DisplayFor(j=>item.Birthday)</td>
                                <td>
                                    <button type="button" class="btn btn-primary rounded-pill">
                                        <a class="text-white" href="@Url.Action("Upsert", "Job", new { id = item.Id })">Edit</a>
                                    </button>
                                    <button type="button" class="btn btn-danger rounded-pill">
                                        <a class="text-white" href="@Url.Action("Delete", "Job", new { id = item.Id })">Delete</a>
                                    </button>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <!-- End Table with stripped rows -->

            </div>
        </div>

    </div>
</div>
</section>





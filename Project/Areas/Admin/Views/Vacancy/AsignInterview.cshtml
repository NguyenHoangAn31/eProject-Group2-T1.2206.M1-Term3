@model Models.ViewModel.InterviewVM;
@{
    ViewData["Title"] = "AsignInterview";
}


<div class="row card">
    <div class="card-body">
        <h1 class="mt-3">Asign</h1>
        <h4>Interview</h4>
        <hr />

        <div class="col-md-5">
            <form class="needs-validation" novalidate asp-action="AsignInterview">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="@Model.IdOfVacancy" hidden/>
                <input asp-for="@Model.IdOfApplicanVacancy" hidden/>
                <div class="form-group">
                    <label asp-for="InterviewVacancy!.StartDate" class="control-label">Start Date</label>
                    <input asp-for="InterviewVacancy!.StartDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="InterviewVacancy!.Interview_Id" class="form-label"></label>
                    <select asp-for="InterviewVacancy!.Interview_Id" asp-items="@Model.InterviewList" class="form-select" required>
                        <option disabled selected value="">-Select Interview-</option>
                    </select>
                    <div class="invalid-feedback">Please choose a department.</div>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Select" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
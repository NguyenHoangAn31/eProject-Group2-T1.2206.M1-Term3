@model Project.Models.DepartmentDto

@{
    ViewData["Title"] = "Upsert";
}


<div class="row card">
    <div class="card-body">
        <h1 class="mt-3">@(Model.Department_Id != null ? "Update" : "Create")</h1>
        <h4>Department</h4>
        <hr />

        <div class="col-md-4">
            <form class="needs-validation" novalidate asp-action="Upsert">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.Department_Id != null)
                {
                    <input asp-for="Department_Id" hidden />
                    <input type="hidden" name="isupdate" value="1" />
                }
                else
                {
                    <div class="form-group">
                        <label asp-for="Department_Id" class="control-label"></label>
                        <input asp-for="Department_Id" class="form-control" required />
                        <div class="invalid-feedback">Please enter department_id.</div>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required />
                    <div class="invalid-feedback">Please enter name.</div>
                </div>
             
                <div class="form-group mt-2">
                    @if (Model.Department_Id != null)
                    {
                        <input type="submit" value="Update" class="btn btn-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Create" class="btn btn-primary" />
                    }
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


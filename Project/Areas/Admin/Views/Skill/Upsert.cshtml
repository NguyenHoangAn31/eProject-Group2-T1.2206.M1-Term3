@model Project.Models.ViewModel.SkillVM

@{
    ViewData["Title"] = "Upsert";
}


<div class="row card">
    <div class="card-body">
        <h1 class="mt-3">@(Model.skill!.Id != 0 ? "Update" : "Create")</h1>
        <h4>Skill</h4>
        <hr />

        <div class="col-md-4">
            <form class="needs-validation" novalidate asp-action="Upsert">
                <input asp-for="skill!.Id" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="skill!.Name" class="control-label"></label>
                    <input asp-for="skill!.Name" class="form-control" required />
                    <div class="invalid-feedback">Please enter name.</div>
                </div>
                <div class="form-group">
                    <label asp-for="skill!.Department_Id" class="form-label"></label>
                    <select asp-for="skill!.Department_Id" asp-items="@Model.DepartmentList" class="form-select" required>
                        <option disabled selected value="">-Select Department-</option>
                    </select>
                    <div class="invalid-feedback">Please choose a department.</div>
                </div>
                <div class="form-group mt-2">
                    @if (Model.skill.Id != 0)
                    {
                        <input type="submit" value="Update" class="btn btn-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Create" class="btn btn-primary" />
                    }
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



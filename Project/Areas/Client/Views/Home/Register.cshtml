@model Models.ApplicantDto
@{
    ViewData["Title"] = "Register";
    ViewData["PageName"] = "Register";
}

<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-5" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.9s" src="~/assets/client/img/register.jpg" style="object-fit: cover; visibility: visible; animation-delay: 0.9s; animation-name: zoomIn;">
                </div>
            </div>
            <div class="col-lg-7">
                <div class="section-title position-relative pb-3 mb-5">
                    <h1 class="mb-0">Sign up for an account</h1>
                    <p>Please enter your email to create an account and access exclusive benefits on our platform</p>
                </div>
                @if (TempData["AlertMessageError"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["AlertMessageError"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @*@if (TempData["AlertMessageSuccess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["AlertMessageSuccess"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }*@
                <form asp-action="Register" method="post">
                    <div class="row g-3">

                        <div class="col-6">
                            <input type="email" asp-for="Email" class="form-control border-0 bg-light px-4 mb-1" placeholder="Email" style="height: 55px;">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="text" asp-for="Fullname" class="form-control border-0 bg-light px-4 mb-1" placeholder="Full Name" style="height: 55px;">
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="password" asp-for="Password" class="form-control border-0 bg-light px-4 mb-1" placeholder="PassWord" style="height: 55px;">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="text" asp-for="Phone" class="form-control border-0 bg-light px-4 mb-1" placeholder="Phone Number" style="height: 55px;">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="date" asp-for="Birthday" class="form-control border-0 bg-light px-4 mb-1" placeholder="Ward" style="height: 55px;">
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="text" asp-for="Ward" class="form-control border-0 bg-light px-4 mb-1" placeholder="Ward" style="height: 55px;">
                            <span asp-validation-for="Ward" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="text" asp-for="District" class="form-control border-0 bg-light px-4 mb-1" placeholder="District" style="height: 55px;">
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="text" asp-for="Province" class="form-control border-0 bg-light px-4 mb-1" placeholder="Province" style="height: 55px;">
                            <span asp-validation-for="Province" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Register</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model IEnumerable<Vacancy>;
@{
    ViewData["Title"] = "Vacancies";
    ViewData["PageName"] = "Vacancies";
}
@section HeaderContent {
    .search {
            position: relative;
            box-shadow: 0 0 40px rgba(51, 51, 51, .1);

        }

        .search input {

            height: 60px;
            text-indent: 25px;
            border: 2px solid #d6d4d4;


        }


        .search input:focus {

            box-shadow: none;
            border: 2px solid #06a3da;


        }

        .search .fa-search {

            position: absolute;
            top: 20px;
            left: 16px;

        }

        .search button {

            position: absolute;
            top: 5px;
            right: 5px;
            height: 50px;
            width: 110px;
            background: #06a3da;

        }

        .dropdown-toggle1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 50px;
            border: 2px solid #06a3da;
            font-weight: 600;
        }
        .vacancy{
            background-color:#eff5ff;
            transition: .3s;
            border-radius: 15px;
        }
        .vacancy:hover{
            background-color: white;
        }
        .img-vacancy{
            border-radius: 10px;
        }
}
<div class="container">
    <div class="row height d-flex justify-content-center align-items-center">
        <div class="col-md-12">
            <form class="search">
                <i class="fa fa-search"></i>
                <input type="text" class="form-control" placeholder="Search Skill">
                <button class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>
</div>



@model Models.ViewModel.LoginVM
@{
    ViewData["Title"] = "Login";
    ViewData["PageName"] = "Login";
}
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-5">
                <div class="section-title position-relative pb-3 mb-5">
                    <h1 class="mb-0">Sign in with your account</h1>
                    <p>Sign in with your email account for the best experience</p>
                </div>
                <form asp-action="Login" method="post">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="row g-3">
                      
                        <div class="col-12">
                            <input type="email" asp-for="Email" class="form-control border-0 bg-light px-4 mb-1" placeholder="Email" style="height: 55px;">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="password" asp-for="Password" class="form-control border-0 bg-light px-4 mb-1" placeholder="Password" style="height: 55px;">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="checkbox">
                            <span>Remember me</span>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Login</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-7" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.9s" src="~/assets/client/img/login.jpg" style="object-fit: cover; visibility: visible; animation-delay: 0.9s; animation-name: zoomIn;">
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}